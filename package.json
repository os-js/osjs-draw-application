{
  "name": "@osjs/draw-application",
  "version": "1.2.11",
  "description": "OS.js v3 Draw Application",
  "scripts": {
    "test": "npm run eslint && npm run stylelint",
    "stylelint": "stylelint src/*.scss",
    "eslint": "eslint src/*.js",
    "build": "webpack",
    "watch": "webpack --watch",
    "prepublishOnly": "npm run test && rm ./dist/* && NODE_ENV=production npm run build"
  },
  "files": [
    "dist/",
    "metadata.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/os-js/osjs-draw-application.git"
  },
  "keywords": [
    "osjs"
  ],
  "author": "Anders Evenrud <andersevenrud@gmail.com>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/os-js/osjs-draw-application/issues"
  },
  "homepage": "https://github.com/os-js/osjs-draw-application#readme",
  "dependencies": {
    "@osjs/gui": "^4.0.34",
    "hyperapp": "^1.2.10"
  },
  "devDependencies": {
    "@osjs/dev-meta": "^1.1.2"
  },
  "osjs": {
    "type": "package"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "@osjs/eslint-config"
  },
  "stylelint": {
    "extends": "@osjs/stylelint-config"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {}
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  }
}
